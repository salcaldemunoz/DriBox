<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/googledrive"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:id="@+id/imagenLauncherDrive"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:layout_marginTop="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
        <ImageView
            android:src="@drawable/dropbox"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:id="@+id/imagenLauncherDropbox"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:layout_marginTop="@dimen/item_touch_helper_max_drag_scroll_per_frame"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
    </LinearLayout>
</LinearLayout>